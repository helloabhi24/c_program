#include <stdio.h>

int main()
{
   int a,b=1,i;
    printf("Enter a no.");
    scanf("%d",&a);
    printf("Your table is ready:");
    for(i=1;i<=10;i++){
        b=i*a;
        printf("%d ",b);
    }
    
    return 0;
}


/// Tables with range.

#include <stdio.h>

int main()
{
   int a,b=1,i,c;
    printf("Enter a no.: ");
    scanf("%d",&a);
    printf("Enter the range also: ");
    scanf("%d",&c);
    printf("Your table is ready:");
    for(i=1;i<=c;i++){
        b=i*a;
        printf("%d ",b);
    }
    
    return 0;
}
